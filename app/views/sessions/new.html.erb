<h1>Log In</h1>

<%= form_with model: @user, url: session_path do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="submit">
    <%= form.submit 'Log In' %>
  </div>
<% end %>

<p>
  <%= link_to 'Sign Up', new_registration_path %>
  <br>
  <br>
  <%= link_to 'Forgot Your Password?', new_password_reset_path %>
</p>
