<h1>Waterings</h1>

<table class="waterings blue">
  <thead>
  <tr>
    <th class='plantColumn'>Plant</th>
    <th class='dateColumn'>Date</th>
    <th class='intervalColumn'>Interval</th>
    <th class='notesColumn'>Notes</th>
  </tr>
  </thead>
  <tbody>
  <% @waterings.each do |watering| %>
    <tr>
      <td class='plantColumn'><%= link_to watering.plant, watering_path(watering.id) %></td>
      <td class='dateColumn'><%= time_ago watering.date %></td>
      <td class='intervalColumn'><%= watering.interval_text %></td>
      <td class='notesColumn'><%= watering.notes %></td>
    </tr>
  <% end %>
  </tbody>
</table>
