<!DOCTYPE html>
<html>
  <head>
    <title>PlantCare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <header>
    <nav>
      <%= params[:controller] != 'plants' || params[:action] != 'index' ? link_to('Plants', plants_path) : 'Plants' %> |
      <%= params[:controller] != 'waterings' || params[:action] != 'index' ? link_to('Waterings', waterings_path) : 'Waterings' %> |
      <%= params[:controller] != 'plants' || params[:action] != 'new' ? link_to('New Plant', new_plant_path) : 'New Plant' %>
    </nav>
    <time><%= format_date Time.zone.now, time: true %></time>
    <div class="logged_in">
      <% if user_signed_in? %>
        <%= params[:controller] == 'settings' ? 'Settings' : link_to('Settings', settings_path) %> |
        <%= button_to "Log Out", session_path, method: :delete, class: 'logout' %>
      <% else %>
        <%= link_to "Log In", new_session_path %>
      <% end %>
    </div>
  </header>

  <section id="main" class="<%= params[:controller] %>">
    <div style="color: green"><%= notice %></div>
    <div style="color: #f44"><%= alert %></div>

    <%= yield %>
  </section>

  </body>
</html>
