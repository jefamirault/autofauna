<!DOCTYPE html>
<html>
  <head>
    <title>PlantCare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <header>
    <nav>
      <div id="currentProject" class="logged_in">
        <%= link_to current_project || 'Select Project', projects_path %>
      </div>

      <%= nav_link 'plants' %>
      <%= nav_link 'waterings' %>
      <%= nav_link 'plants', action: 'new', text: 'New Plant', path: new_plant_path %>
    </nav>


    <nav class="logged_in">
      <% if current_user&.admin? %>
        <%= nav_link 'users' %>
      <% end %>

      <% if current_project %>
        <%= nav_link 'projects', action: 'show', text: 'Project Settings', path: project_path(current_project) %>
      <% end %>

      <% if user_signed_in? %>
        <%= nav_link 'settings', text: 'Account Settings' %>
        <%= button_to "Log Out", session_path, method: :delete, class: 'logout navItem' %>
      <% else %>
        <%= link_to "Log In", new_session_path %>
      <% end %>
    </nav>
  </header>

  <section id="main" class="<%= params[:controller] %>">
    <div style="color: green"><%= notice %></div>
    <div style="color: #f44"><%= alert %></div>

    <%= yield %>
  </section>

  </body>
</html>
