<h1><%= t 'reset_password' %></h1>

<%= form_with model: @user, url: password_reset_path(token: params[:token]) do |form| %>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :password, t('account.new_password') %>
    <%= form.password_field :password, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, t('password_confirmation') %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="submit">
    <%= form.submit t('reset_your_password') %>
  </div>
<% end %>