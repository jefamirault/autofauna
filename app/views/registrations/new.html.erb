<h1><%= t 'sign_up' %></h1>

<%= form_with model: @user, url: registrations_path do |form| %>
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.label :email, t('email') %>
    <%= form.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= form.label :password, t('password') %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, t('password_confirmation') %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="submit">
    <%= form.submit t('sign_up'), class: 'saveButton' %>
  </div>
<% end %>

<br>
<%= link_to t('log_in'), new_session_path %>
<br><br>
<%= link_to t('forgot_password'), new_password_reset_path %>
