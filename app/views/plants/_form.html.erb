<%= form_with(model: plant) do |form| %>
  <% if plant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
        <% plant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :project_id %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, autofocus: plant.new_record? %>
  </div>

  <div>
    <%= form.label :uid, style: "display: block" %>
    <%= form.number_field :uid %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :pot, style: "display: block" %>
    <%= form.text_field :pot %>
  </div>

  <div>
    <%= form.label :archived, style: "display: block" %>
    <%= form.check_box :archived %>
  </div>

  <div>
    <%= form.label :scheduled_watering, style: "display: block" %>
    <%= form.date_field :scheduled_watering %>
  </div>

  <div>
    <%= form.label :watering_frequency, style: "display: block" %>
    <%= form.number_field :watering_frequency %>
  </div>

  <div>
    <%= form.label :manual_watering_frequency, style: "display: block" %>
    <%= form.check_box :manual_watering_frequency %>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
