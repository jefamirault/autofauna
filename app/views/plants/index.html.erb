<h2>Scheduled Today</h2>
<% if @scheduled_today.any? %>
  <table>
    <thead>
    <tr>
      <th>Plant</th>
      <th class="trim2" style="min-width:130px;">Watered</th>
      <th style="min-width:148px">Scheduled</th>
      <th class="trim">Pot</th>
      <th>Location</th>
<!--      <th class="trim4">Frequency</th>-->
      <!--      <th>Suggested Watering</th>-->
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @scheduled_today.each do |plant| %>
      <%= render 'plant_row', plant: plant %>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nothing scheduled for today.</p>
<% end %>
<h2>Upcoming</h2>
<% if @upcoming.any? %>
  <table class="yellow">
    <thead>
    <tr>
      <th>Plant</th>
      <th class="trim2" style="min-width:130px;">Watered</th>
      <th style="min-width:148px">Scheduled</th>
      <th class="trim">Pot</th>
      <th>Location</th>
<!--      <th class="trim4">Frequency</th>-->
      <!--      <th>Suggested Watering</th>-->
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @upcoming.each do |plant| %>
      <%= render 'plant_row', plant: plant %>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nothing scheduled in the next 7 days.</p>
<% end %>
