<p style="color: green"><%= notice %></p>

<h2>Needs Watering</h2>
<% if @needs_water.any? %>
  <table class="yellow">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @needs_water.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Everything up to date!</p>
<% end %>
<% if @watered_today.any? %>
  <h2>Watered Today</h2>
  <table class="blue">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @watered_today.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% end %>
<h2>Upcoming</h2>
<% if @upcoming.any? %>
  <table class="green">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @upcoming.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nothing scheduled in the next 7 days.</p>
<% end %>
<h2>Recently Watered</h2>
<% if @recently.any? %>
  <table class="blue">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @recently.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nothing watered in the last 7 days.</p>
<% end %>

<% if @unscheduled.any? %>
  <h2>Unscheduled</h2>
  <table>
    <%= render 'plant_row_header' %>
    <tbody>
      <% @unscheduled.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% end  %>

