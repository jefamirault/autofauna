<p style="color: green"><%= notice %></p>

<h1>Plants</h1>

<div style="float:right">
  <%= link_to "Import Plants", plants_import_path %> |
  <%= link_to "Export Plants", plants_path(format: :json) %>
</div>

<h2>Needs Watering</h2>
<% if @needs_water %>
  <table class="yellow">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @needs_water.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Everything up to date!</p>
<% end %>
<% if @watered_today %>
  <h2>Watered Today</h2>
  <table class="blue">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @watered_today.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% end %>
<h2>Upcoming</h2>
<% if @upcoming %>
  <table class="green">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @upcoming.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nothing scheduled in the next 7 days.</p>
<% end %>
<h2>Recently Watered</h2>
<% if @recently %>
  <table class="blue">
    <%= render 'plant_row_header' %>
    <tbody>
      <% @recently.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Nothing watered in the last 7 days.</p>
<% end %>

<% if @unscheduled.any? %>
  <h2>Unscheduled</h2>
  <table>
    <%= render 'plant_row_header' %>
    <tbody>
      <% @unscheduled.each do |plant| %>
        <%= render 'plant_row', plant: plant %>
      <% end %>
    </tbody>
  </table>
<% end  %>
<div style=" text-align: center;">
  <div class="plantButton">
    <%= link_to "+ New Plant", new_plant_path %>
  </div>
</div>
