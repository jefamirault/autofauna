<!--      <th class="trim4">Frequency</th>-->
      <!--      <th>Suggested Watering</th>-->
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% @recently.each do |plant| %>
      <%= render 'plant_row', plant: plant %>
