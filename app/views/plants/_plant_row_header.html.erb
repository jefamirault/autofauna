<% archive ||= false %>
<thead>
  <tr>
    <th class="plantColumn"><%= sort_link @q, :uid, t('plants.index.plant') %></th>
    <% unless archive %>
      <th class="nextWateringColumn"><%= sort_link @q, :date_max_watering, ['date_max_watering asc', 'date_min_watering asc'], 'Suggestion' %></th>
    <% end %>
    <th class="wateredColumn"><%= sort_link @q, :date_last_watering, t('attributes.last_watering') %></th>
    <th class="locationColumn"><%= sort_link @q, :location_id, t('attributes.location') %></th>
    <th class="containerColumn"><%= sort_link @q, :pot, t('attributes.container') %></th>
    <% unless archive %>
      <th class="actionColumn"><%= t 'plants.index.action' %></th>
    <% end %>
  </tr>
</thead>