<tr id="<%= dom_id plant %>">
  <td><%= link_to plant.label, plant_path(plant.id) %></td>
  <td><%= plant.location %></td>
  <td><%= plant.pot %></td>
  <td><%= time_ago plant.last_watering %></td>
  <td><%= plant.watering_frequency_text %></td>
  <td><%= plant.time_until_watering_text %></td>
  <td><%= time_ago plant.last_fertilized %></td>
  <% if plant.last_watering == Date.today %>
    <td><%= link_to 'Edit Watering', edit_watering_path(plant.waterings.last) %></td>
  <% else %>
    <td><%= link_to 'Water', plant_water_path(plant), data: { turbo_stream: true } %></td>
  <% end %>
</tr>