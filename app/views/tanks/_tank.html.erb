<div id="<%= dom_id tank %>">
  <p>
    <strong>Name:</strong>
    <%= tank.name %>
  </p>

  <p>
    <strong>Capacity:</strong>
    <%= tank.print_capacity %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= tank.description&.gsub("\n",'<br>')&.html_safe %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= tank.location %>
  </p>

  <p>
    <strong>Zone:</strong>
    <%= tank.zone %>
  </p>

  <p>
    <strong>TDS:</strong>
    <%= tank.last_tds %>ppm measured <%= time_ago tank.last_tds_reading&.datetime %>
  </p>

</div>
