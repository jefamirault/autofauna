<% content_for :title, "Tank: #{@tank}" %>

<h1>
  <%= link_to t('.tanks'), tanks_path, class: 'breadcrumb' %>
  <%= icon 'chevron-right', variant: 'mini', class: 'breadcrumb' %>
  <%= @tank %>
</h1>

<%= render @tank %>

<div>
  <%= link_to "Edit this Tank", edit_tank_path(@tank) %> |
  <%= link_to "Back to Tanks", tanks_path %>
</div>

<h2>Water Parameters</h2>
<%= link_to new_tank_water_test_path(@tank), class: "" do %>
  + New Test
<% end %>
<%= render 'water_tests/water_tests', water_tests: @water_tests %>

<%= button_to "Destroy this tank", @tank, method: :delete, class: 'buttonLink', onclick: "return confirm('Are you sure you want to permanently delete this Tank?');" %>
